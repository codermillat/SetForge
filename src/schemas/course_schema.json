{
  "title": "Course Curriculum Schema",
  "description": "Schema for capturing detailed information about the curriculum of a course.",
  "type": "object",
  "properties": {
    "course_name": {
      "type": "string",
      "description": "The name of the course (e.g., 'Bachelor of Technology (Computer Science & Engineering)')."
    },
    "course_code": {
      "type": "string",
      "description": "The code for the course (e.g., 'SET0101')."
    },
    "duration_years": {
      "type": "number",
      "description": "The duration of the course in years."
    },
    "semesters": {
      "type": "array",
      "description": "A list of semesters, each containing a list of subjects.",
      "items": {
        "type": "object",
        "properties": {
          "semester_number": {
            "type": "integer",
            "description": "The semester number (e.g., 1, 2)."
          },
          "subjects": {
            "type": "array",
            "description": "A list of subjects taught in this semester.",
            "items": {
              "type": "object",
              "properties": {
                "subject_name": {
                  "type": "string"
                },
                "subject_code": {
                  "type": "string"
                },
                "credits": {
                  "type": "number"
                }
              },
              "required": ["subject_name", "subject_code"]
            }
          }
        },
        "required": ["semester_number", "subjects"]
      }
    }
  },
  "required": ["course_name", "semesters"]
}
